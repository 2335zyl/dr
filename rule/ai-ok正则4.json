"rules":[
  /* 跨协议动态拦截 */
  {"name":"♻️泛广告特征阻断",
   "hosts":["*"],
   "regex":[
     // 特征维度1：时长特征（3-15秒典型广告分片）
     "#EXTINF:(3|5|8|10|15)\\.\\d+,[\\s\\S]{1,200}?(?:/ad/|_banner_|\\?pos=\\d)",
     
     // 特征维度2：路径特征（广告目录动态匹配）
     "\\.ts(?:\\?v=\\d+|\\?t=\\d{10}|#)[0-9A-F]{8}_ad",
     
     // 特征维度3：协议标记（HLS/DASH广告标记）
     "(?:#EXT-X-CUE-OUT|#UPLYNK-SEGMENT).*DURATION=15",
     
     // 特征维度4：加密特征（广告密钥标识）
     "#EXT-X-KEY:.*URI=\"[^\"]+_(ad|promo)\\.key\""
   ]},

  /* 语义级全局防护 */
  {"name":"♻️泛内容安全墙",
   "hosts":["*"],
   "regex":[
     // 磁力广告指纹
     "magnet:\\?xt=.*[&](?:dn|tr)=[^&]*(广告|推广|VIP)",
     
     // 播放器浮层特征
     "(?:player|video)_(?:ad|banner)_\\d{4}x\\d{3}",
     
     // 新型动态注入广告
     "/(?:adv|ads)/\\d{6}/[0-9A-F]{32}/"
   ]}
]
