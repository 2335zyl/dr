"rules":[
/* 核心防御层 */
{"name":"♻️量子广告引擎","hosts":"*","regex":
"(?i)(EXT-X-DISCONTINUITY\\s*?((?:EXTINF:\\d{1,2}\\.\\d+).+?\\.ts.*?){1,3})|"+
"(?<!main)(\\/[a-z0-9]{8,20}[_-](?:ad|gg|pr)[_-][^\\/]{5,}\\.ts)|"+
"(\\b(?:\\d{2}\\.\\d{3}|15秒?|暂停.{0,4}赞助)\\b)"},

/* 时空分析规则 */
{"name":"♻️时间码熔断","hosts":"*","regex":
"EXTINF:(?:3\\.333|5\\.000|6\\.666|8\\.000|9\\.500|10\\.000).+?(?:#EXT-X-ENDLIST|\\R#EXT)"},

/* 智能DNA特征 */
{"name":"♻️广告基因链","hosts":"*","regex":
"(?:\\.ts\\?(?:v=ad|from=promo|.*\\&rnd=)\\d{10})|"+
"(?:\\/[a-z]{2}(?:ads|pr|cpm)\\/v\\d{2}\\/)|"+
"(?:\\d{3}x\\d{3}\\.ts\\s+https?:\\/\\/[^\\/]{50,})"},

/* 语义防火墙 */
{"name":"♻️语义净化","hosts":"*","regex":
"((?:立即注册|VIP试用|免费领取|荷官在线|性感荷官|澳门首家)(?![^\\n]{0,20}(?:剧情|台词))|"+
"(?:av\\d{5}|x{3}网站)(?![^\\n]*?电影))"},

/* 反逃逸机制 */
{"name":"♻️动态防御","hosts":"*","regex":
"(?:\\/\\d{4}-\\d{2}-\\d{2}\\/[a-f0-9]{32}\\.ts)|"+
"(?:\\?t=\\d{10}[^\\n]{0,8}(?:ad_|sp_))|"+
"(?:\\/[a-z]{3}\\d{2}\\/[^\\/]{10,}_hd\\.ts)"},

/* 白名单保险层 */
{"name":"✅正片守护者","hosts":"*","regex":
"(?:(ep\\d+|movie|series)\\/[^\\/]{5,}\\.ts)|"+
"(?:\\/play\\d{6}\\/main\\d{4}\\.ts)|"+
"(?:^[^#\\n]{0,500}\\.ts\\s+(?!.*\\b(?:ad|pr)\\b))"}
]
